@if (textViewModel is not null)
{
    <TextBlock ViewModel="@textViewModel" CssClass="@cssTextBlock" />
}

@if (branchViewModel is not null)
{
    <BranchBlock ViewModel="@branchViewModel" />
}


@code {
    [Parameter] public string CssClass { get; set; }

    [Parameter] public IBlockVM ViewModel { get; set; }


    TextBlockVM textViewModel => ViewModel as TextBlockVM;
    BranchBlockVM branchViewModel => ViewModel as BranchBlockVM;

    string cssTextBlock => (textViewModel?.Child is not null) ? $"block__parent {CssClass}" : CssClass;

}